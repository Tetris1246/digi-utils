{
  "manifest_version": 2,
  "name": "Digi-Utils",
  "version": "1.0",

  "description": "Various utilities for digitalesregister.it",

  "icons": {
    "32": "icons/button-32.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.digitalesregister.it/*"],
      "js": ["content/grade_average.js"],
      "css": ["css/dark.css"],
      "run-at": "document_end"
    }
  ],

  "background": {
    "scripts": ["background/browser_action.js"]
  },

  "browser_action": {
    "default_icon": {
      "32": "icons/button-32.png"
    }
  }
}

